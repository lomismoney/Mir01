# Laravel 11 å¾Œç«¯ Dockerfile (ç”Ÿç”¢ç´šå¤šéšæ®µæ§‹å»º)

# Stage 1: æ§‹å»ºéšæ®µ - å®‰è£ PHP æ“´å±•ã€Composer å’Œä¾è³´
FROM php:8.2-fpm-alpine AS builder

# å®‰è£æ§‹å»ºæ™‚éœ€è¦çš„ç³»çµ±ä¾è³´
RUN apk add --no-cache --virtual .build-deps \
    $PHPIZE_DEPS \
    freetype-dev \
    libjpeg-turbo-dev \
    libpng-dev \
    libwebp-dev \
    libzip-dev \
    oniguruma-dev \
    && apk add --no-cache \
    freetype \
    libjpeg-turbo \
    libpng \
    libwebp \
    libzip \
    oniguruma \
    git \
    unzip

# é…ç½®å’Œå®‰è£ PHP æ“´å±•
RUN docker-php-ext-configure gd --with-freetype --with-jpeg --with-webp \
    && docker-php-ext-install -j$(nproc) \
        pdo_mysql \
        mbstring \
        exif \
        pcntl \
        bcmath \
        gd \
        zip \
        opcache

# å®‰è£ Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# è¨­å®šå·¥ä½œç›®éŒ„
WORKDIR /var/www/html

# è¤‡è£½ Composer æ–‡ä»¶ä»¥åˆ©ç”¨ Docker å±¤ç·©å­˜
COPY composer.json composer.lock ./

# å®‰è£ PHP ä¾è³´ï¼ˆç”Ÿç”¢ç’°å¢ƒå„ªåŒ–ï¼‰
RUN composer install \
    --no-dev \
    --no-scripts \
    --no-autoloader \
    --prefer-dist \
    --optimize-autoloader \
    && composer clear-cache

# è¤‡è£½æ‡‰ç”¨ç¨‹å¼ä»£ç¢¼
COPY . .

# ç”Ÿæˆå„ªåŒ–çš„ autoloader
RUN composer dump-autoload --optimize --no-dev

# Stage 2: é‹è¡Œéšæ®µ - ç”Ÿç”¢ç´š nginx + php-fpm ç’°å¢ƒ
FROM php:8.2-fpm-alpine AS runner

# å®‰è£é‹è¡Œæ™‚ä¾è³´
RUN apk add --no-cache \
    nginx \
    supervisor \
    freetype \
    libjpeg-turbo \
    libpng \
    libwebp \
    libzip \
    oniguruma \
    && rm -rf /var/cache/apk/*

# å¾æ§‹å»ºéšæ®µè¤‡è£½ PHP æ“´å±•
COPY --from=builder /usr/local/lib/php/extensions/ /usr/local/lib/php/extensions/
COPY --from=builder /usr/local/etc/php/conf.d/ /usr/local/etc/php/conf.d/

# è¨­å®šå·¥ä½œç›®éŒ„
WORKDIR /var/www/html

# ç¢ºä¿ www-data ç”¨æˆ¶å’Œçµ„å­˜åœ¨ï¼ˆAlpine Linux é€šå¸¸å·²åŒ…å«ï¼‰
RUN getent group www-data || addgroup -g 82 -S www-data
RUN getent passwd www-data || adduser -u 82 -D -S -G www-data www-data

# å‰µå»ºå¿…è¦ç›®éŒ„
RUN mkdir -p /var/www/html/storage/logs \
    && mkdir -p /var/www/html/storage/framework/cache \
    && mkdir -p /var/www/html/storage/framework/sessions \
    && mkdir -p /var/www/html/storage/framework/views \
    && mkdir -p /var/www/html/bootstrap/cache \
    && mkdir -p /run/nginx \
    && mkdir -p /var/log/supervisor

# è¤‡è£½æ‡‰ç”¨ç¨‹å¼ç¢¼å’Œä¾è³´
COPY --from=builder /var/www/html /var/www/html

# è¨­å®š PHP ç”Ÿç”¢ç’°å¢ƒé…ç½®
RUN mv "$PHP_INI_DIR/php.ini-production" "$PHP_INI_DIR/php.ini"

# PHP å„ªåŒ–é…ç½®
COPY <<EOF /usr/local/etc/php/conf.d/laravel.ini
; Laravel ç”Ÿç”¢ç’°å¢ƒå„ªåŒ–
opcache.enable=1
opcache.memory_consumption=256
opcache.interned_strings_buffer=16
opcache.max_accelerated_files=20000
opcache.revalidate_freq=2
opcache.fast_shutdown=1
opcache.enable_cli=1
opcache.validate_timestamps=0

; ä¸Šå‚³å’ŒåŸ·è¡Œé™åˆ¶
upload_max_filesize=50M
post_max_size=50M
max_execution_time=300
memory_limit=512M
max_input_vars=3000

; éŒ¯èª¤è™•ç†
log_errors=On
error_log=/var/log/php_errors.log
display_errors=Off

; æ€§èƒ½å„ªåŒ–
realpath_cache_size=4096K
realpath_cache_ttl=600
EOF

# PHP-FPM å„ªåŒ–é…ç½® (Cloud Run å…§éƒ¨ç³»çµ±å°ˆç”¨)
COPY <<EOF /usr/local/etc/php-fpm.d/www.conf
[www]
user = www-data
group = www-data
listen = 127.0.0.1:9000
listen.owner = www-data
listen.group = www-data

; Cloud Run å…§éƒ¨ç³»çµ±å„ªåŒ– - æ”¯æ´çªç™¼æµé‡
pm = dynamic
pm.max_children = 100
pm.start_servers = 15
pm.min_spare_servers = 8
pm.max_spare_servers = 25
pm.max_requests = 1000

; å¿«é€ŸéŸ¿æ‡‰é…ç½®
pm.process_idle_timeout = 20s
pm.max_spawn_rate = 15

; æ—¥èªŒé…ç½®
catch_workers_output = yes
decorate_workers_output = no
access.log = /proc/self/fd/2
slowlog = /proc/self/fd/2
request_slowlog_timeout = 8s

; å¥åº·æª¢æŸ¥ï¼ˆåƒ…å…§éƒ¨ä½¿ç”¨ï¼‰
ping.path = /fpm-ping
ping.response = pong
pm.status_path = /fpm-status
EOF

# Nginx å„ªåŒ–é…ç½®
COPY <<EOF /etc/nginx/nginx.conf
worker_processes auto;
pid /run/nginx.pid;
error_log /dev/stderr warn;

events {
    worker_connections 2048;      # æé«˜é€£æ¥æ•¸æ”¯æ´çªç™¼æµé‡
    use epoll;
    multi_accept on;
    accept_mutex off;             # æ¸›å°‘é–ç«¶çˆ­ï¼ŒåŠ å¿«è™•ç†é€Ÿåº¦
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    # æ—¥èªŒæ ¼å¼
    log_format main '\$remote_addr - \$remote_user [\$time_local] "\$request" '
                    '\$status \$body_bytes_sent "\$http_referer" '
                    '"\$http_user_agent" "\$http_x_forwarded_for"';
    access_log /dev/stdout main;

    # æ€§èƒ½å„ªåŒ–
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    client_max_body_size 50M;

    # Gzip å£“ç¸®
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss application/atom+xml image/svg+xml;

    # å®‰å…¨æ¨™é ­
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    server {
        listen 8080;
        server_name _;
        root /var/www/html/public;
        index index.php;

        # å®‰å…¨æ€§é…ç½®
        server_tokens off;

        # Laravel è·¯ç”±é…ç½®
        location / {
            try_files \$uri \$uri/ /index.php?\$query_string;
        }

        # PHP è™•ç†ï¼ˆç°¡åŒ–é…ç½®ï¼‰
        location ~ \.php$ {
            fastcgi_split_path_info ^(.+\.php)(/.+)$;
            fastcgi_pass 127.0.0.1:9000;
            fastcgi_index index.php;
            include fastcgi_params;
            fastcgi_param SCRIPT_FILENAME \$realpath_root\$fastcgi_script_name;
            fastcgi_param PATH_INFO \$fastcgi_path_info;
            
            # æ€§èƒ½å„ªåŒ–
            fastcgi_buffering on;
            fastcgi_buffer_size 128k;
            fastcgi_buffers 4 256k;
            fastcgi_busy_buffers_size 256k;
            fastcgi_read_timeout 300;
        }

        # å¥åº·æª¢æŸ¥ç«¯é»
        location = /health {
            access_log off;
            return 200 "healthy\n";
            add_header Content-Type text/plain;
        }

        # PHP-FPM ç‹€æ…‹ç›£æ§ï¼ˆåƒ…å…§éƒ¨ä½¿ç”¨ï¼‰
        location ~ ^/(fpm-status|fpm-ping)$ {
            access_log off;
            fastcgi_pass 127.0.0.1:9000;
            include fastcgi_params;
            fastcgi_param SCRIPT_FILENAME \$fastcgi_script_name;
            allow 127.0.0.1;
            deny all;
        }

        # éœæ…‹æ–‡ä»¶è™•ç†
        location ~* \.(jpg|jpeg|png|gif|ico|css|js|woff|woff2|ttf|svg)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
            access_log off;
        }

        # éš±è—æ•æ„Ÿæ–‡ä»¶ï¼ˆç²¾ç¢ºæ­£å‰‡è¡¨é”å¼ï¼‰
        location ~* /\.(?:env|htaccess|htpasswd|git|svn)$ {
            deny all;
            access_log off;
            log_not_found off;
        }
    }
}
EOF

# Supervisor é…ç½®
COPY <<EOF /etc/supervisor/conf.d/supervisord.conf
[supervisord]
nodaemon=true
user=root
logfile=/dev/stdout
logfile_maxbytes=0
pidfile=/run/supervisord.pid

[program:nginx]
command=nginx -g 'daemon off;'
autostart=true
autorestart=true
priority=10
stdout_logfile=/dev/stdout
stdout_logfile_maxbytes=0
stderr_logfile=/dev/stderr
stderr_logfile_maxbytes=0

[program:php-fpm]
command=php-fpm --nodaemonize
autostart=true
autorestart=true
priority=5
stdout_logfile=/dev/stdout
stdout_logfile_maxbytes=0
stderr_logfile=/dev/stderr
stderr_logfile_maxbytes=0
EOF

# Cloud Run Jobs åŸ·è¡Œè…³æœ¬
COPY <<'EOF' /usr/local/bin/run-artisan.sh
#!/bin/sh
set -e

echo "ğŸ”§ Cloud Run Job åŸ·è¡Œ: $@"
echo "å·¥ä½œç›®éŒ„: $(pwd)"

# ç¢ºä¿åœ¨æ­£ç¢ºçš„ç›®éŒ„
cd /var/www/html

# è¨­å®šåŸºæœ¬æ¬Šé™
chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache 2>/dev/null || true
chmod -R 775 /var/www/html/storage /var/www/html/bootstrap/cache 2>/dev/null || true

# åŸ·è¡Œ artisan å‘½ä»¤
echo "ğŸš€ åŸ·è¡Œ: php artisan $@"
exec php artisan "$@"
EOF

# å•Ÿå‹•è…³æœ¬ (Cloud Run å…§éƒ¨ç³»çµ±å†·å•Ÿå‹•å„ªåŒ–)
COPY <<'EOF' /usr/local/bin/start-server.sh
#!/bin/sh
set -e

echo "ğŸš€ Cloud Run å…§éƒ¨åº«å­˜ç³»çµ± - å¿«é€Ÿå†·å•Ÿå‹•æ¨¡å¼"
echo "ç›®æ¨™: 3ç§’å…§å•Ÿå‹•ï¼Œæ”¯æ´100ä¸¦ç™¼çªç™¼æµé‡"
echo "æ¶æ§‹: nginx + php-fpm + supervisor"

# å¿«é€Ÿæ¬Šé™è¨­å®š (ä¸¦è¡ŒåŸ·è¡Œ)
(chown -R www-data:www-data /var/www/html/storage &)
(chown -R www-data:www-data /var/www/html/bootstrap/cache &)
(chmod -R 775 /var/www/html/storage &)
(chmod -R 775 /var/www/html/bootstrap/cache &)
wait

# ç”Ÿç”¢ç’°å¢ƒå¿«é€Ÿå¿«å– (ä¸¦è¡ŒåŸ·è¡ŒåŠ é€Ÿå†·å•Ÿå‹•)
if [ "$APP_ENV" = "production" ]; then
    echo "âš¡ ä¸¦è¡Œå¿«å–å„ªåŒ– (å†·å•Ÿå‹•åŠ é€Ÿ)..."
    (php artisan config:cache 2>/dev/null &)
    (php artisan route:cache 2>/dev/null &) 
    (php artisan view:cache 2>/dev/null &)
    wait  # ç­‰å¾…æ‰€æœ‰å¿«å–å®Œæˆ
fi

echo "âœ… å†·å•Ÿå‹•å®Œæˆ (~2-3ç§’)"
echo "ğŸ”¥ ä¸¦ç™¼æ”¯æ´: 100 requests/instance"
echo "ğŸ’° æˆæœ¬ç­–ç•¥: min-instances=0, æŒ‰éœ€æ“´å±•"
echo "ğŸ¥ å¥åº·æª¢æŸ¥: /health | ğŸ“Š ç›£æ§: /status"

# ç›´æ¥å•Ÿå‹• (ç„¡é¡å¤–å»¶é²)
exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
EOF

RUN chmod +x /usr/local/bin/start-server.sh /usr/local/bin/run-artisan.sh

# æš´éœ²ç«¯å£
EXPOSE 8080

# å•Ÿå‹•æœå‹™
CMD ["/usr/local/bin/start-server.sh"] 